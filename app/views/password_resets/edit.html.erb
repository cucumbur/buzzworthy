<% provide(:title, 'Reset password') %>

<div class="content">
    <h2 class="content-subhead">Reset Password</h2>
    <%= form_for(@user, url: password_reset_path(params[:id]), :html => {:class => "pure-form pure-form-aligned"} ) do |f| %>

        <fieldset>
            <legend></legend>
            <%= hidden_field_tag :email, @user.email %>

						<div class="field pure-control-group">
	            <%= f.label :password %>
	            <%= f.password_field :password, :class=>"pure-input-2-3" %>
            </div>
            
            <div class="field pure-control-group">
	            <%= f.label :password_confirmation, "Password Confirmation" %>
	            <%= f.password_field :password_confirmation, :class=>"pure-input-2-3" %>
            </div>
            
            <div class="actions pure-controls">
	            <%= f.submit "Submit", class: "pure-button pure-button-primary" %>
            </div>      
        </fieldset>
    <% end %>
</div>