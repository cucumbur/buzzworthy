    </div>
    <div class="pure-menu pure-menu-horizontal pure-menu-scrollable custom-menu custom-menu-bottom custom-menu-tucked" id="tuckedMenu">
        <div class="custom-menu-screen"></div>
        <ul class="pure-menu-list">
            <li class="pure-menu-item"><%= link_to "Home", root_path,  class: 'pure-menu-link' %></li>
            <% if logged_in? %>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link">Artist</a></li>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link">Items</a></li>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link">Downtown</a></li>
                <li class="pure-menu-item"><%= link_to "Shows", shows_path, class:'pure-menu-link' %></li>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link">Studio</a></li>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link">Band</a></li>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link">Label</a></li>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link">Directory</a></li>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link">Forums</a></li>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link">Account</a></li>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link">Help</a></li>
                <% if current_user and current_user.admin? %><li class="pure-menu-item"><%= link_to "Admin", admin_path, class:'pure-menu-link' %></li><% end %>
                <li class="pure-menu-item"><%= link_to "Logout", logout_path, method: "delete", class:'pure-menu-link' %></li>
            <% else %>
                <li class="pure-menu-item"><%= link_to "Login", login_path, class:'pure-menu-link' %></li>
                <li class="pure-menu-item"><%= link_to "Sign Up", signup_path, class:'pure-menu-link' %></li>
         	<% end %>
         	
        </ul>
    </div>
</div>